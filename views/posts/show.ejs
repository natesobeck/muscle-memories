<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/posts/show.css">
<%- include('../partials/nav') %>
<main>
  <h1 class="nav-buffer"><%= post.name %></h1>
  <div id="thread-container">
    <% if (user) { %>
      <div id="add-comment-container">
        <form>
          <h4>Add a comment to this thread: </h4>
          <div id="add-comment-subcontainer">
            <textarea name="content"></textarea>
            <button class="add-btn btn" type="submit">+</button>
          </div>
        </form>
      </div>
    <% } else { %>
      <h4>Please sign in to add a post to this thread.</h4>
    <% } %>
    <% post.comments.forEach(comment => { %>
      <%= console.log(comment) %>
      <div class="comment-container">
        <%= comment.content %>
      </div>
    <% }) %>
  </div>
</main>

<%- include('../partials/footer') %>
